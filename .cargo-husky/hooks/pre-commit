#!/bin/sh

echo "ğŸ”§ Running cargo fmt..."
cd contracts
cargo fmt --all

if [ $? -ne 0 ]; then
  echo "âŒ Cargo fmt failed. Please fix formatting errors."
  exit 1
fi

echo "ğŸ“ Running cargo clippy..."
cargo clippy --all-targets --all-features -- -D warnings

if [ $? -ne 0 ]; then
  echo "âŒ Cargo clippy found issues. Please fix them before committing."
  exit 1
fi

echo "ğŸ”¨ Running cargo check..."
cargo check --all-targets --all-features

if [ $? -ne 0 ]; then
  echo "âŒ Cargo check failed. Please fix build errors before committing."
  exit 1
fi

echo "ğŸ§ª Running cargo test..."
cargo test

if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "âœ… All Rust checks passed! Code formatted and ready to commit..."